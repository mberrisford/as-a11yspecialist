    input[type="url"] {
        margin-bottom: 0.225rem;
    }
    #url-help {
        margin-bottom: 1.6rem;
    }
    label {
        font-weight: bold;
    }

    .external-link-icon {
        width: 1em;
        height: 1em;
        display: inline-block;
        margin-left: 0.25em;
        vertical-align: middle;
    }
    th,
    td {
        vertical-align: top;
    }
</style>
